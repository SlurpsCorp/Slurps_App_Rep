<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/firstConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/floubgaccueil"
    tools:context=".CreationPartie">

    <ScrollView
        android:id="@+id/scrolly"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/ButtonValider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    tools:context=".CreationPartie">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="11dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/banner"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:id="@+id/imageViewCodePartie"
                        android:layout_width="254dp"
                        android:layout_height="56dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"
                        app:srcCompat="@drawable/rectangletitrecode"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="CODE PARTIE"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:translationY="3sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewCodePartie"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewCodePartie"
                        app:layout_constraintStart_toStartOf="@+id/imageViewCodePartie"
                        app:layout_constraintTop_toTopOf="@+id/imageViewCodePartie"
                        app:layout_constraintVertical_bias="1.0" />

                    <ImageView
                        android:id="@+id/imageViewCode1"
                        android:layout_width="66dp"
                        android:layout_height="95dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewCode2"
                        app:layout_constraintEnd_toStartOf="@+id/imageViewCode2"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toEndOf="@+id/constraint"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewCodePartie"
                        app:srcCompat="@drawable/code1"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/code1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N"
                        android:textColor="#000000"
                        android:textSize="55sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewCode1"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewCode1"
                        app:layout_constraintHorizontal_bias="0.296"
                        app:layout_constraintStart_toStartOf="@+id/imageViewCode1"
                        app:layout_constraintTop_toTopOf="@+id/imageViewCode1"
                        app:layout_constraintVertical_bias="0.285" />

                    <ImageView
                        android:id="@+id/imageViewCode2"
                        android:layout_width="66dp"
                        android:layout_height="95dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewCode3"
                        app:layout_constraintEnd_toStartOf="@+id/imageViewCode3"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/imageViewCode1"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        app:srcCompat="@drawable/code2"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/code2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O"
                        android:textColor="#000000"
                        android:textSize="55sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewCode2"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewCode2"
                        app:layout_constraintHorizontal_bias="0.392"
                        app:layout_constraintStart_toStartOf="@+id/imageViewCode2"
                        app:layout_constraintTop_toTopOf="@+id/imageViewCode2"
                        app:layout_constraintVertical_bias="0.285" />

                    <ImageView
                        android:id="@+id/imageViewCode3"
                        android:layout_width="66dp"
                        android:layout_height="95dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewCode4"
                        app:layout_constraintEnd_toStartOf="@+id/imageViewCode4"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/imageViewCode2"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewCodePartie"
                        app:srcCompat="@drawable/code3"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/code3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N"
                        android:textColor="#000000"
                        android:textSize="55sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/imageViewCode3"
                        app:layout_constraintEnd_toEndOf="@id/imageViewCode3"
                        app:layout_constraintHorizontal_bias="0.518"
                        app:layout_constraintStart_toStartOf="@id/imageViewCode3"
                        app:layout_constraintTop_toTopOf="@id/imageViewCode3"
                        app:layout_constraintVertical_bias="0.285" />

                    <ImageView
                        android:id="@+id/imageViewCode4"
                        android:layout_width="66dp"
                        android:layout_height="95dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toStartOf="@+id/constraint"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/imageViewCode3"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewCodePartie"
                        app:srcCompat="@drawable/code4"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/code4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E"
                        android:textColor="#000000"
                        android:textSize="55sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/imageViewCode4"
                        app:layout_constraintEnd_toEndOf="@id/imageViewCode4"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintStart_toStartOf="@id/imageViewCode4"
                        app:layout_constraintTop_toTopOf="@id/imageViewCode4"
                        app:layout_constraintVertical_bias="0.285" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="254dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewCode3"
                        app:srcCompat="@drawable/rectangletitrecode"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/CreerTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="TEMPS PARTIE"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:translationY="3sp"
                        app:layout_constraintBottom_toBottomOf="@id/imageView11"
                        app:layout_constraintEnd_toEndOf="@id/imageView11"
                        app:layout_constraintHorizontal_bias="0.51"
                        app:layout_constraintStart_toStartOf="@id/imageView11"
                        app:layout_constraintTop_toTopOf="@id/imageView11"
                        app:layout_constraintVertical_bias="1.0" />

                    <NumberPicker
                        android:id="@+id/timePickerMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:foregroundTint="@color/white"
                        android:headerBackground="@android:drawable/divider_horizontal_bright"
                        android:theme="@style/AppTheme.Picker"
                        app:layout_constraintCircleRadius="10dp"
                        app:layout_constraintEnd_toStartOf="@+id/constraint"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/timePickerHour"
                        app:layout_constraintTop_toBottomOf="@+id/imageView11"
                        tools:ignore="MissingConstraints" />

                    <NumberPicker
                        android:id="@+id/timePickerHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="32dp"
                        android:layout_marginRight="32dp"
                        android:focusableInTouchMode="false"
                        android:headerBackground="@android:drawable/divider_horizontal_bright"
                        android:theme="@style/AppTheme.Picker"
                        app:layout_constraintEnd_toStartOf="@+id/timePickerMin"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/constraint"
                        app:layout_constraintTop_toBottomOf="@+id/imageView11"
                        tools:ignore="MissingConstraints" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <GridLayout
                    android:id="@+id/GridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:columnCount="4"
                    android:columnOrderPreserved="true"
                    android:fadeScrollbars="true"
                    android:fadingEdge="vertical"
                    android:rowOrderPreserved="true"
                    tools:ignore="MissingConstraints">

                    <FrameLayout
                        android:id="@+id/flCercle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="40dp">

                        <ImageView
                            android:id="@+id/waitUser"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foregroundGravity="top|left"
                            android:src="@drawable/ic_userwaiting"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ProgressBar
                            android:id="@+id/progressBar2"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="30dp" />

                    </FrameLayout>

                </GridLayout>

            </LinearLayout>

            <Button
                android:id="@+id/ButtonValider"
                android:layout_width="130dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:foregroundGravity="center_horizontal"
                android:padding="20dp"
                android:text="VALIDER"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>